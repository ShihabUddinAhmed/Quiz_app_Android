<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQues"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_background"
    tools:context=".questionPage">

    <RadioGroup
        android:id="@+id/ansOptions"
        android:layout_width="300dp"
        android:layout_height="197dp"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1 " />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2 " />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 4" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="357dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/ansOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-17dp"
        android:layout_marginTop="-162dp"
        android:layout_marginRight="-20dp"
        android:text="what? "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/button3"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_below="@id/ansOptions"
        android:layout_alignBottom="@id/ansOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="-104dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ansOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-81dp"
        android:layout_marginBottom="-41dp"
        android:text="hint"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/design_default_color_error" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ansOptions"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="211dp"
        android:text="Score: 0"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ansOptions"
        android:layout_alignBottom="@id/ansOptions"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="116dp"
        android:layout_marginRight="-81dp"
        android:layout_marginBottom="-238dp"
        android:text="answerfoot"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black" />
</RelativeLayout>